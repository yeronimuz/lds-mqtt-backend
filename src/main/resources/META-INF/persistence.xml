<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0" xmlns="http://java.sun.com/xml/ns/persistence">
	<persistence-unit name="meas-pu" transaction-type="RESOURCE_LOCAL">
        <description>
            Persistence unit for the measurements storage
        </description>
        <provider>jakarta.persistence.spi.PersistenceProvider</provider>
        
        <class>com.lankheet.iot.datatypes.entities.MeasurementEntity</class>
        <class>com.lankheet.iot.datatypes.entities.MeasurementType</class>
        <class>com.lankheet.iot.datatypes.entities.SensorEntity</class>
        <class>com.lankheet.iot.datatypes.entities.SensorType</class>
        <class>com.lankheet.iot.datatypes.entities.DomoticsUserEntity</class>
        <class>com.lankheet.iot.datatypes.entities.SiteEntity</class>
        <class>com.lankheet.iot.datatypes.entities.ActuatorEntity</class>
        <class>com.lankheet.iot.datatypes.entities.Permission</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/domotics" />
            <property name="javax.persistence.jdbc.user" value="lnb" />
            <property name="javax.persistence.jdbc.password" value="lnb" />

            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>

 	</persistence-unit>
</persistence>
